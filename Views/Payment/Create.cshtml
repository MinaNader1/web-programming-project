@model depi_real_state_management_system.Models.Payment

@{
    ViewData["Title"] = "Create Payment";
}

<h1>Create Payment</h1>

<h4>Payment</h4>
<hr />

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="TenantID" class="control-label"></label>
        <select asp-for="LeaseID" class="form-control" asp-items="@(new SelectList(ViewBag.Leases, "LeaseID", "LeaseID"))"></select>
        <span asp-validation-for="LeaseID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AmountPaid" class="control-label"></label>
        <input asp-for="AmountPaid" class="form-control" />
        <span asp-validation-for="AmountPaid" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PaymentDate" class="control-label"></label>
        <input asp-for="PaymentDate" class="form-control" />
        <span asp-validation-for="PaymentDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PaymentStatus" class="control-label"></label>
        <input asp-for="PaymentStatus" class="form-control" />
        <span asp-validation-for="PaymentStatus" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

<div>
    <h5>Validation Errors</h5>
    <div asp-validation-summary="All" class="text-danger"></div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
